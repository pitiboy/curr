{
  "kind": "collectionType",
  "collectionName": "transactions",
  "info": {
    "singularName": "transaction",
    "pluralName": "transactions",
    "displayName": "Transaction",
    "description": "Double-entry bookkeeping record with debit and credit entries"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "date": {
      "type": "datetime",
      "required": true
    },
    "amount": {
      "type": "decimal",
      "required": true
    },
    "description": {
      "type": "text"
    },
    "debit_account": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::account.account",
      "inversedBy": "debit_transactions"
    },
    "credit_account": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::account.account",
      "inversedBy": "credit_transactions"
    },
    "transaction_type": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::transaction-type.transaction-type",
      "inversedBy": "transactions"
    },
    "currency_type": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::currency-type.currency-type",
      "inversedBy": "transactions"
    },
    "related_transaction": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::transaction.transaction",
      "inversedBy": "related_transactions"
    },
    "related_transactions": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::transaction.transaction",
      "mappedBy": "related_transaction"
    },
    "receipt": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": [
        "images",
        "files"
      ]
    }
  }
}
