{
  "kind": "collectionType",
  "collectionName": "accounts",
  "info": {
    "singularName": "account",
    "pluralName": "accounts",
    "displayName": "Account",
    "description": "Financial account within a division for tracking transactions"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "maxLength": 255
    },
    "category": {
      "type": "enumeration",
      "enum": ["revenue", "expense", "asset", "liability", "equity"],
      "required": true
    },
    "description": {
      "type": "text"
    },
    "division": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::division.division",
      "inversedBy": "accounts"
    },
    "transactions": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::transaction.transaction",
      "mappedBy": "account"
    }
  }
}
