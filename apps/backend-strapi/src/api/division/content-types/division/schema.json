    },
    "location": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::location.location",
      "inversedBy": "divisions"
    },
    "accounts": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::account.account",
      "mappedBy": "division"
    }
